
@{
    ViewData["Title"] = "Perfil do usuário";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}


@section css {
    <link href="~/lib/fancybox/dist/jquery.fancybox.min.css" rel="stylesheet" />
}

@section js {
    <script src="~/view/CadastroUsuario/indexObterPerfil.js"></script>
    <script src="~/lib/fancybox/dist//jquery.fancybox.min.js"></script>

}



<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Perfil do usuário</h3>
    </div>
    <form role="form">
        <div class="card-body">

            <div id="divMsg"></div>

            <div class="col-12 d-flex justify-content-start align-content-start flex-wrap flex-row">
                <div class="col-4 d-flex justify-content-start align-content-start flex-wrap">
                    <div class="form-group">
                        <label for="perfil_email">Nome completo</label>
                        <input type="text" class="form-control" id="perfil_nome" value="" disabled>
                    </div>
                    <div class="form-group">
                        <label for="perfil_email">Email</label>
                        <input type="email" class="form-control" id="perfil_email" value="" disabled>
                    </div>
                </div>
                <div class="col-4 d-flex justify-content-start align-content-start flex-wrap">
                    <div class="form-group">
                        <label for="perfil_cpf">CPF</label>
                        <input type="text" class="form-control" id="perfil_cpf" value="" disabled>
                    </div>
                </div>
                <div class="col-4 d-flex justify-content-start align-content-start flex-wrap">

                    <div class="form-group">
                        <label for="perfil_dataNasc">Data de Nascimento</label>
                        <input type="date" class="form-control" id="perfil_dataNasc" value="" disabled>
                    </div>
                </div>

                <div class="col-7 d-flex justify-content-start align-content-start flex-wrap">
                    <label for="perfil_rua">Rua</label>
                    <input type="text" class="form-control" id="perfil_rua" value="" disabled>
                </div>

                <div class="col-2 d-flex justify-content-start align-content-start flex-wrap">
                    <label for="perfil_numero">Número</label>
                    <input type="text" class="form-control" id="perfil_numero" value="" disabled>
                </div>

                <div class="col-4 d-flex justify-content-start align-content-start flex-wrap mt-3">
                    <label for="perfil_cep">CEP</label>
                    <input type="text" class="form-control" id="perfil_cep" value="" disabled>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
        </div>
    </form>
</div>